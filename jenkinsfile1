pipeline {

    agent any

    tools {
        maven 'M2_HOME'
    }

    stages {
        stage ("sonarqube scan") {
            steps {
                sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=laridevops_week16-geoapp'
            }
        }

        stage ("all maven commands") {
            steps {
                sh 'mvn clean test compile install package'
            }
        }

        }
    }